import eventlet
import os
import sys
sys.path.insert(0, os.getcwd())

from hotzenplotz.common import config
from hotzenplotz.worker import manager

if __name__ == '__main__':
    eventlet.monkey_patch()
    config.parse_args()
    config.setup_logging(config)

#    logging.setup("nozzle-worker")

    worker = manager.WorkerManager()
    worker.init_host()
    worker.start()
    worker.wait()
